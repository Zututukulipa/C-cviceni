<Window x:Class="Marbles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marbles"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Image x:Name="ImageView" HorizontalAlignment="Left" Height="386" Width="802"/>
            <Button x:Name="LoadBtn" Content="Load Image" Width="800" Click="LoadBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
